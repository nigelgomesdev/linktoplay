<%= link_to(playlist_path(playlist), class: "list-group-item list-group-item-action") do %>
  <li class="media">
    <%= fa_icon "list 2x", class: "pull-right mr-3" %>
    <div class="media-body">
      <span class="mt-0 mb-1"><%= playlist.title %></span>
      <span class="float-right badge badge-info"><i><%= playlist.tracks.length %> tracks</span></i></span>
    </div>
  </li>
<% end %>
