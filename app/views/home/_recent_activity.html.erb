<div class="card">
  <div class="card-header">
    <h2>Recent Activity</h2>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="playlists-tab" data-toggle="tab" href="#playlists" role="tab" aria-controls="playlists" aria-selected="true">Playlists</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="tracks-tab" data-toggle="tab" href="#tracks" role="tab" aria-controls="tracks" aria-selected="false">Tracks</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="popular-tab" data-toggle="tab" href="#popular" role="tab" aria-controls="popular" aria-selected="false">Popular</a>
      </li>
    </ul>
  </div>
  <div class="tab-content card-body" id="myTabContent">
    <div class="tab-pane fade show active" id="playlists" role="tabpanel" aria-labelledby="playlists-tab">
      <%= render partial: 'playlists', locals: { playlists: @recent_playlists } %>
    </div>
    <div class="tab-pane fade" id="tracks" role="tabpanel" aria-labelledby="tracks-tab">
      <%= render partial: 'tracks', locals: { tracks: @recent_tracks } %>
    </div>
    <div class="tab-pane fade" id="popular" role="tabpanel" aria-labelledby="popular-tab">
      #TODO:    
    </div>
  </div>
</div>