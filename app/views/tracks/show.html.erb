
<div class="card text-center">
  <div class="embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" src="<%= @track.source_link %>"></iframe>
  </div>
  <div class="card-body">
    <h3 class="card-title"><%= @track.title %></h3>
    <p class="card-text">
      <span>By <%= @track.artist.fullname %></span>
      <span class="mb-2 text-muted"><i><%= "- (#{@track.genre})" %></i></span>
    </p>
  </div>
  <div class="card-footer text-muted">
    <%= link_to play_previous_track_path(@track) do %>
      <%= fa_icon "arrow-left 3x", class: "pull-left ml-3" %>
    <% end %>
    <%= link_to 'Edit', edit_track_path(@track) %> | <%= link_to 'Back', tracks_path %>
    <%= link_to play_next_track_path(@track) do %>
      <%= fa_icon "arrow-right 3x", class: "pull-right mr-3" %>
    <% end %>
  </div>
</div>
